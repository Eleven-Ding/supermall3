.recommend{
  display: flex;
  padding: 30rpx 10rpx;
  box-shadow: 1rpx 16rpx 6rpx rgba(200, 200,200, 0.3);
}
.recommend-item{
  flex: 1;
  font-size: 32rpx;
  text-align: center;
}
.recommend image{
  width: 160rpx;
  height: 160rpx;
}
.popular{
  margin-top:16rpx ;
}
.popular image{
  width: 100%;
}
.goods{
  display: flex;
  width: 100%;
  flex-wrap: wrap;
  background-color: white;
  justify-content: space-around;
}
.goods-item{
  width: 48%;
  position: relative;
  margin-top: 16rpx;
}
#tab2{
  position: fixed;
  left: 0;
  right: 0;
  z-index: 2000;
  background-color: white;
}